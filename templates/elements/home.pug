// Home page or welcoming page
div(class="home", id="Home")
  div(class="bg-complement-container")
    div(class="bg-complement")
      div
        span(style="--i:1")
        span(style="--i:2")
        span(style="--i:3")
        span(style="--i:4")

  //- Top container arrow
  div(class="container-fluid con-up")

    div(class="row")
      div(class="container col-4 d-flex justify-content-center")
        div(class="figure")
      span(class="container py-3 mb-5 col-4 text-center")
        svg(xmlns="http://www.w3.org/2000/svg", width="16", height="16", fill="currentColor", class="bi bi-arrow-up animate__animated animate__shakeY any-infinite", viewBox="0 0 16 16")
