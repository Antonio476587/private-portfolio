        div(class="figure")

  //- Welcome message
  div(class="container-fluid con-welcome")
    h1(class="h1", id="h1") Welcome

  //- Mini decorations
  div(class="position-absolute divi-content")
    h4 
      i(class="one-h") const 
      | portfolio
      i(class="one-h") =
      i(class="str-h") "Cv-online" ;

  include nav.pug